@model KHCharacterEdit.Models.Character

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Character</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Weapon)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Weapon.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Armors)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Armors</th>
                </tr>
                @foreach (var item in Model.Armors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Accessories)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Accessories</th>
                </tr>
                @foreach (var item in Model.Accessories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>