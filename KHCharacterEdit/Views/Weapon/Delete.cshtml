@model KHCharacterEdit.Models.Weapon

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Weapon</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Strength)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Strength)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Magic)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Magic)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ability)
        </dt>

        <dd>
            @if (Model.Ability != null) //Confere se há uma Ability vinculada à Weapon
            { //Gera link de acesso direto à View Details da Ability vinculada
                @Html.ActionLink(Model.Ability.Name, "Details", "Ability", new { id = Model.Ability.ID }, Html.DisplayFor(modelItem => Model.Ability))
            }
        </dd>

        <dt>
            @Html.DisplayName("Weapon Type")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WeaponType)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
