@model IEnumerable<KHCharacterEdit.Models.Accessory>

@{
    ViewBag.Title = "Accessories";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Ability Points")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Strength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Magic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ability)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AbilityPoints)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Strength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Magic)
        </td>
        <td>
            @if (item.Ability != null) //Confere se há uma Ability vinculada ao Accessory
            { //Gera link de acesso direto à View Details da Ability vinculada
                @Html.ActionLink(item.Ability.Name, "Details", "Ability", new { id = item.Ability.ID }, Html.DisplayFor(modelItem => item.Ability.Name))
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
